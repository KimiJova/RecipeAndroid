<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextRecipeName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_name"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextIngredients2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextRecipeName2"
        android:hint="@string/ingredients"
        android:minLines="4"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextInstructions2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextIngredients2"
        android:hint="@string/instructions"
        android:minLines="4"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextInstructions2"
        android:layout_alignParentEnd="true"
        android:text="@string/save_changes"
        android:padding="16dp" />

</RelativeLayout>
